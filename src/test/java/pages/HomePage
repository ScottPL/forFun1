package pages;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.ui.WebDriverWait;
import org.testng.Assert;

public class HomePage extends pages.BasePage {

    //*********Constructor*********
    public HomePage (WebDriver driver, WebDriverWait wait) {
        super(driver, wait);
    }

//  just for commit purposes

    //*********Page Variables*********
    String baseURL = "http://www.klm.com/";

    //*********Web Elements*********
    String acceptCookieClass = "cookiebar-agree-button-agree";
    String theKlmLogo = "#logo > h1";
    String openDropDownCountryClass = "dd-selected";
    String setCountryContainerClass = "dd-click-off-close";
    String setYourCountryClass = "img[src='/travel/generic/images/Poland_tcm169-189514.png']";
    String setYourLanguageClass = "a[href='https://www.klm.com/home/pl/en']";


    //*********Page Methods*********

    //Go to Homepage
    public void goToKLM (){
        driver.get(baseURL);
        //driver.navigate().to(baseURL)
    }

    //Accept cookies
    public void acceptCookies (){
        click(By.className(acceptCookieClass));
    }

    //Check the page is KLM by its logo's url
    public void checkKlmLogo () {
        WebElement tmp = driver.findElement(By.cssSelector(theKlmLogo));
        String logoText = tmp.getText();
        Assert.assertEquals(logoText,"KLM Royal Dutch Airlines");
    }

    //Open drop-down
    public void openDropDownCountry (){
        click(By.className(openDropDownCountryClass));
    }

    //Set your country
    public void setYourCountry (){
        WebElement tmp = driver.findElement(By.className(setCountryContainerClass));
        tmp.findElement(By.cssSelector(setYourCountryClass)).click();}

    //Select your language
    public void setYourLanguages (){
        click(By.cssSelector(setYourLanguageClass));
    }
}